<%= render "shared/partial" %>
<p id="notice"><%= notice %></p>

<h1>ユーザーの登録施設一覧</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Address</th>
      <th>Detail</th>
      <th>Images</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.room_name %></td>
        <td><%= room.room_price %></td>
        <td><%= room.room_address %></td>
        <td><%= room.room_detail %></td>
        <td><%= image_tag room.image, class: 'room-image' if room.image.attached? %>
        </td>
        <td> <%= link_to "編集", [:edit, room] %>
         </td>
        </tr>
    <% end %>
 
 
  </tbody>
</table>